{
  "rules": [
    {
      "name": "Images",
      "description": "Alert whenever images are downloaded",
      "pattern_type": "AND",
      "pattern_list": [
        {
          "style": "EndsWithPattern",
          "pattern": ".png"
        }
      ],
      "action_type": "Alert",
      "action_args": {
        "text": "AND: %s"
      }
    },
    {
      "name": "Nothing",
      "description": "Shouldn't get executed.",
      "pattern_type": "OR",
      "pattern_list": [
        {
          "style": "StartsWithPattern",
          "pattern": "2"
        },
        {
          "style": "EndsWithPattern",
          "pattern": "fsdkjf"
        }
      ],
      "action_type": "Alert",
      "action_args": {
        "text": "OR: %s"
      }
    },
    {
      "name": "Torrent",
      "description": "Opens Torrent files automatically.",
      "pattern_type": "OR",
      "pattern_list": [
        {
          "style": "EndsWithPattern",
          "pattern": ".torrent"
        }
      ],
      "action_type": "Shell",
      "action_args": {
        "command": "xdg-open '%s'"
      }
    },
    {
      "name": "Mimetype",
      "description": "Matches on a mimetype",
      "pattern_type": "OR",
      "pattern_list": [
        {
          "style": "MimetypePattern",
          "pattern": "application/json"
        }
      ],
      "action_type": "Alert",
      "action_args": {
        "text": "Mimetype json %s"
      }
    }
  ],
  "watches": [
    {
      "location": "~/tmp",
      "rules": ["Images", "Mimetype"]
    },
    {
      "location": "~",
      "rules": ["Nothing"]
    }
  ]
}
